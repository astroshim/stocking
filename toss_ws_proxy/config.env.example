# Toss WebSocket Proxy Configuration
# Copy this file to .env and modify as needed

# WebSocket 연결 설정
TOSS_PROXY_WEBSOCKET_URL=wss://realtime-socket.tossinvest.com/ws
TOSS_PROXY_CONNECTION_TIMEOUT=15.0
TOSS_PROXY_HEARTBEAT_INTERVAL=4.0

# 재연결 설정
TOSS_PROXY_MAX_RECONNECT_ATTEMPTS=10
TOSS_PROXY_RECONNECT_DELAY=5.0
TOSS_PROXY_RECONNECT_BACKOFF_MULTIPLIER=1.5

# 데이터 처리 설정
TOSS_PROXY_MAX_MESSAGE_QUEUE_SIZE=10000
TOSS_PROXY_WORKER_THREAD_COUNT=2

# Toss API 설정
TOSS_PROXY_DEVICE_ID=WTS-6857e1aa2ef34224a9ccfb6f879c1c1e
TOSS_PROXY_REFRESH_TOKEN_URL=https://wts-api.tossinvest.com/api/v1/refresh-utk

# 로깅 설정
TOSS_PROXY_LOG_LEVEL=INFO
TOSS_PROXY_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 사용자 정의 쿠키 설정 (JSON 형태)
# TOSS_PROXY_DEFAULT_COOKIES={"key": "value"}
